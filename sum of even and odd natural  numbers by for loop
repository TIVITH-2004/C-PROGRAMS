#include<stdio.h>
void main()
{
    int n,i,sum=0;
    printf("enter the natural : ");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        if(i%2==0)
         sum=sum+i;
    }
    printf("%d",sum);

}
#include<stdio.h>
void main()
{
    int n,i,sum=0;
    printf("enter the natural : ");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        if(i%2==1)
         sum=sum+i;
    }
    printf("%d",sum);

}
